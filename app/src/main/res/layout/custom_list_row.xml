<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="0dp" >

    <!-- Image -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image"
        android:layout_alignTop="@+id/image"
        android:textSize="@dimen/title"
        android:text="Title example"
        android:textStyle="bold"
        android:paddingBottom="7dp" />

    <!-- Speaker -->
    <TextView
        android:id="@+id/speaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/speaker"
        android:text="Speaker Example"
        android:textStyle="bold"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_below="@+id/favorite"
        android:layout_toEndOf="@+id/image" />


    <!-- Favorite -->
    <CheckBox
        android:button="@drawable/checkbox_selector"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite"
        android:layout_marginEnd="5dp"
        android:layout_alignBottom="@+id/title"
        android:layout_alignEnd="@+id/description" />

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:text="Description example Lorem ipsodiumLorem ipsodium Lorem ipsodium Lorem ipsodium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/description"
        android:layout_below="@+id/speaker"
        android:layout_toEndOf="@+id/image" />

    <!-- Date -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="1dp"
        android:paddingEnd="1dp"
        android:weightSum="1"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true"
        android:gravity="end">
        <!--android:background="@color/list_row_date_color"-->

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date"
            android:text="28/05/2015 | 19:00 - 21:00" />

    </LinearLayout>


</RelativeLayout>